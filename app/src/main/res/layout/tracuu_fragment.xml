<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@color/white">

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingBottom="75dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@drawable/backgroundbordered"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="TRA CỨU ĐIỂM THI TNTHPT"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_bold"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Nhập số báo danh"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_semibold"
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sbdInput"
                    android:hint="Số báo danh"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_regular"
                    android:background="@drawable/inputbackground"
                    android:inputType="number"
                    android:padding="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/findBtn01"
                    android:text="Tra cứu"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/sfpro_bold"
                    android:background="@drawable/bottomnav_background"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noData"
                    android:layout_centerInParent="true"
                    android:text="Không có thông tin"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_bold"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/listScoreFull"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mainTitle"
                        android:text="Điểm thi của học sinh có số báo danh"
                        android:fontFamily="@font/sfpro_semibold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Toán:"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Ngữ văn:"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Ngoại ngữ:"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Vật lí:"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/sfpro_semibold"
                                android:text="Hóa học:"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Sinh học:"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Lịch sử:"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Địa lí:"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Giáo dục công dân:"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="9"
                                android:id="@+id/toanScore"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="9"
                                android:id="@+id/vanScore"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="9"
                                android:id="@+id/ngoainguScore"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="9"
                                android:id="@+id/vatliScore"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/sfpro_semibold"
                                android:text="9"
                                android:id="@+id/hoaScore"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="9"
                                android:id="@+id/sinhScore"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="9"
                                android:id="@+id/lichsuScore"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="9"
                                android:id="@+id/dialiScore"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="9"
                                android:id="@+id/gdcdScore"
                                android:textColor="@color/black"
                                android:fontFamily="@font/sfpro_semibold"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#6B6868"
                                android:layout_marginTop="@dimen/margin_1"
                                android:layout_marginBottom="@dimen/margin_1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:text="Chú ý: Số báo danh gồm 8 chữ số được ghi trên giấy dự thi và trên cổng thông tin tuyển sinh của Bộ Giáo Dục và Đào Tạo."
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_regular_italic"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:text="Chú thích: Mã ngoại ngữ đối với thí sinh thi bài thi ngoại ngữ: N1 - Tiếng Anh, N2 - Tiếng Anh, N3 - Tiếng Pháp, N4 - Tiếng Trung, N5 - tiếng Đức, N6 - Tiếng Nhật, N7 - Tiếng Hàn"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfpro_regular_italic"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>