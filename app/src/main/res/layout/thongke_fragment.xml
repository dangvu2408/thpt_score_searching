                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_gravity="center_horizontal"
                    android:indeterminateTint="#648EFA"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Phổ điểm môn Sinh Học"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_semibold"
                android:textSize="18sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.BarChart
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/sinhhoc_chart_2024"/>
                <ProgressBar
                    android:id="@+id/progressBarSinhhoc"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_gravity="center_horizontal"
                    android:indeterminateTint="#648EFA"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Phổ điểm môn Lịch Sử"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_semibold"
                android:textSize="18sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.BarChart
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/lichsu_chart_2024"/>
                <ProgressBar
                    android:id="@+id/progressBarLichsu"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_gravity="center_horizontal"
                    android:indeterminateTint="#648EFA"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Phổ điểm môn Địa Lí"
                android:textColor="@color/black"
                android:fontFamily="@font/sfpro_semibold"
                android:textSize="18sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.BarChart
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/diali_chart_2024"/>
                <ProgressBar
                    android:id="@+id/progressBarDiali"
